import 'dart:convert';

import 'package:ecoleti/pages/posts/posts_controller.dart';
import 'package:ecoleti/uis/received_message_screen.dart';
import 'package:flutter/material.dart';
import 'package:get/get.dart';

class PostsPage extends StatelessWidget {
  final PostsController _controller = Get.put(PostsController());
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('HomeScreen'),
      ),
      body: Obx(() {
        if (_controller.isLoading.value) {
          return Center(
            child: CircularProgressIndicator(),
          );
        }
        return ListView.builder(
          itemCount: _controller.noticeList.length,
          itemBuilder: (context, index) {
            print(_controller.noticeList[index].toJson());
            return Column(
              children: [
                Container(
                                    child: Padding(
                                        padding: EdgeInsets.all(0),
                                        child: Center(
                                          child: Text(
                                           utf8.decode((_controller.noticeList[index]
                                          .title!
                                          .codeUnits)),style: TextStyle(fontWeight: FontWeight.bold),),
                                        )),
                                  ),
                Container(
                  child: ReceivedMessageScreen(
                                      message: utf8.decode((_controller.noticeList[index]
                                          .description!
                                          .codeUnits))),
                )
              ],
            );
          },
        );
      }),
    );
  }
}
